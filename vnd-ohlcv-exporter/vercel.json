{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/(assets/.*)\\.(js|css|png|jpg|svg|json)",
      "dest": "/$1.$2"
    },
    {
      "src": "/favicon\\.ico",
      "dest": "/favicon.ico"
    },
    {
      "src": "/.*",
      "dest": "/index.html"
    }
  ]
}
